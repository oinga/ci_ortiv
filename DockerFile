# Use an official PHP image with Apache
FROM php:8.1-apache

# Set the working directory inside the container
WORKDIR /var/www/html

# Install necessary PHP extensions for CodeIgniter 4
RUN docker-php-ext-install mysqli pdo pdo_mysql

# Enable Apache mod_rewrite for CodeIgniter routing
RUN a2enmod rewrite

# Copy your CodeIgniter project to the container
COPY ./public /var/www/html/public
COPY ./app /var/www/html/app
COPY ./writable /var/www/html/writable
COPY ./tests /var/www/html/tests
COPY ./env /var/www/html/.env

# Set file permissions for writable directory (CodeIgniter's requirement)
RUN chown -R www-data:www-data /var/www/html/writable

# Expose port 80 for the web server
EXPOSE 80

# Start Apache service in the foreground
CMD ["apache2-foreground"]
